#!/usr/bin/env bash

# Easier navigation: .., ..., ...., .....
alias cd="z"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias dot="cd $DOT_FILES"

# utilities
alias :q="poweroff"
alias cat='bat'
alias ls='eza'
alias la='ls -a'
alias ÃŸ='ls'
alias du='du -h'
alias cp='cp -i'
alias apply='paplay'
alias mkdirp='mkdir -p'
alias shex='chmod +x'

# zmk
alias cygnus-help='firefox "https://github.com/Pongelupe/cygnus-zmk-config"'

# aliases and configs
alias a='view_aliases'
alias aupdate='source ~/.aliases'
alias aedit='vim ~/.aliases'
alias aedit-update='vim ~/.aliases && source ~/.aliases'

# vim
alias v='vim'
alias vpinstall='vim +"PlugInstall --sync" +qall'
alias vpupdate='vim +"PlugUpdate --sync" +qall'
alias vpclean='vim +"PlugClean --sync" +qall'
alias av='cat ~/.vimrc'
alias av-edit='vim ~/.vimrc'
alias dadbod='vim +"DBUI"'

# oh-my-zsh
alias emoji='print_emoji_by_name'
alias emojir='random_emoji'
alias emojis='display_emoji'
alias emojisg='display_emoji | grep'

# Source category-specific aliases
for file in ~/.aliases.*; do
	[ -r "$file" ] && [ -f "$file" ] && source "$file";
done;
unset file;
